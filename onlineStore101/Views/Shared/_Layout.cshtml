@using onlineStore101.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>onketalkscode</title>
    @Styles.Render("~/Content/css")
   
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background:#181a1b;color:#fff">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ONKETALKSCODE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Our Services<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Brands", "Index", "AccessoryBrands", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Category", "Index", "Categories", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("City", "Index", "Cities", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Country", "Index", "Countries", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Currency", "Index", "Currencies", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Product", "Index", "Products", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("State", "Index", "States", new { area = "" }, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">

                        <a data-toggle="dropdown" class="dropdown-toggle" href="">Cart<b class="caret"></b></a>
                        <ul class="dropdown-menu">

                            @if (Session["cart"] != null)
                            {
                                foreach (CartItem item in (List<CartItem>)Session["cart"])
                                {

                                    <li style="color:green;margin-left:10px;">
                                        @item.Product.Title (@item.Quantity)
                                    </li>
                                }
                            }
                            <li class="divider"></li>
                            <li>
                                <a href="@Url.Action("CheckoutDetails","ShoppingCart")" style="background-color:#fff;">
                                    <span class="label label-danger" style="font-size:15px;margin-left:15px;">Checkout</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
      
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - onketalkscode</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/mylocfiller")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
