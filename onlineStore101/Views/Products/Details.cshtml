@model onlineStore101.Models.Product

@{
    ViewBag.Title = Html.DisplayFor(model => model.Title);
}

<a type="button" class="btn btn-default btn-lg pull-right" href="@Url.Action("Index", "LaptopAds")">Laptop Ads</a>
<h2>@Model.Title</h2>
<hr />

<div class="row">
    @Html.Partial("_CategoriesPartial")

    <div class="col-md-9">

        <div class="thumbnail">
            <a href="@Url.Action("Details", "Products", new { Model.Slug })">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Picture, 0, Model.Picture.Length)" class="img-responsive img-thumbnail" style="width: 250px; height: 200px;" alt="" />
            </a>
            <div class="caption-full">
                <h4 title="@Model.Currency.Name : @Model.Price" class="pull-right">@Html.DisplayFor(model => model.Currency.ISOCode) @Html.DisplayFor(model => model.Price)</h4>
                <h4 title="@Model.Title">
                    @Html.DisplayFor(model => model.Title)
                </h4>
                <p>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.Label("Laptop Brand")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AccessoryBrand.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.OperatingSystem)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.OperatingSystem)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Ram)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Ram)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Processor)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Processor)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HardDisk)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HardDisk)
                        </dd>

                        <dt>
                            @Html.Label("Condition")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Condition)
                        </dd>
                        <dt>
                            @Html.Label("Seller")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Seller.Name)
                        </dd>
                        <dt>
                            @Html.Label("Location")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.City.Name), @Html.DisplayFor(model => model.State.Name), @Html.DisplayFor(model => model.Country.Name)
                        </dd>

                        <dt>
                            @Html.Label("Contact")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Seller.MobileNumber)
                        </dd>
                        <dt>
                            @Html.Label("Posted On")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PostingTime)
                        </dd>
                    </dl>
                </p>

                <p>@Html.DisplayFor(model => model.Description)</p>
            </div>

            <div class="ratings">
                <p>@Model.Reviews.Count Reviews</p>
            </div>
        </div>

        @*@Html.Partial("_LaptopAdControlReviewPartial")*@

        @Html.Partial("_ReviewsPartial")

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


